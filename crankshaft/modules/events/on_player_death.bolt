from wicked_expressions:api import Scoreboard
from ../event_handler import BuiltinEvent, Entrypoint
from ../config import Config
from ./on_player_tick import on_player_tick

def handler(event):
    death_tracker = Scoreboard(f"{Config.SCOREBOARD_ROOT}.event.{event.id}", 'deathCount')['@s']

    if death_tracker >= 1:
        death_tracker = 0
        event.trigger()

on_player_death = BuiltinEvent('on_player_death')
on_player_death.attach_handler(handler, on_player_tick, Entrypoint.EVENT)
